<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.srv_twry.popularmovies.MovieDetailsActivity">

        <ImageView
            android:id="@+id/iv_poster_details_activity"
            android:layout_width="170dp"
            android:layout_height="220dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="24dp" />

        <TextView
            android:id="@+id/tv_title_details_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_poster_details_activity"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/iv_poster_details_activity"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tv_popularity_details_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/iv_poster_details_activity"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_details_activity"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/tv_vote_average_count_details_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_popularity_details_activity"
            app:layout_constraintLeft_toRightOf="@+id/iv_poster_details_activity"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/tv_adult_details_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/adult_description"
            android:visibility="gone"
            android:textColor="@android:color/holo_red_light"
            app:layout_constraintLeft_toRightOf="@+id/tv_title_details_activity"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_poster_details_activity"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tv_genres_details_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/iv_poster_details_activity"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_poster_details_activity"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/tv_releasedate_details_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/iv_poster_details_activity"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_vote_average_count_details_activity"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tv_language_details_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_releasedate_details_activity"
            app:layout_constraintLeft_toRightOf="@+id/iv_poster_details_activity"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tv_description_details_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_genres_details_activity"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />
    </android.support.constraint.ConstraintLayout>

</ScrollView>
