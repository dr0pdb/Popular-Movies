<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/details_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.srv_twry.popularmovies.MovieDetailsActivity">

        <ImageView
            android:id="@+id/iv_poster_details_activity"
            android:layout_width="125dp"
            android:layout_height="180dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginLeft="@dimen/dimen_24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="@dimen/dimen_24dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_details_activity"
            android:contentDescription="@string/MoviePoster"/>

        <TextView
            android:id="@+id/tv_title_details_activity"
            android:layout_width="0dp"
            android:layout_height="125dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center"
            tools:text="@string/string_pseudo"
            android:textStyle="bold|italic"
            android:textColor="@color/cardview_light_background"
            android:textSize="@dimen/dimen_28sp"/>
        
        <TextView
            android:id="@+id/tv_releasedate_details_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/iv_poster_details_activity"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginStart="@dimen/dimen_16dp"
            app:layout_constraintTop_toTopOf="@+id/iv_poster_details_activity"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:textSize="@dimen/dimen_16sp"
            tools:text="@string/string_pseudo" />

        <TextView
            android:id="@+id/tv_vote_average_count_details_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/iv_poster_details_activity"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_releasedate_details_activity"
            tools:text="@string/string_pseudo"
            android:textStyle="italic"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:id="@+id/view"
            android:layout_marginTop="@dimen/dimen_8dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_poster_details_activity"
            android:layout_marginLeft="@dimen/dimen_16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="@dimen/dimen_16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/window_background"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_16dp" />

        <TextView
            android:id="@+id/overview_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="@dimen/dimen_8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:text="@string/overview"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <TextView
            android:id="@+id/tv_description_details_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="@dimen/dimen_8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            tools:text="@string/string_pseudo"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            app:layout_constraintTop_toBottomOf="@+id/overview_title" />



    </android.support.constraint.ConstraintLayout>

</ScrollView>
